{
    "publish": {
        "type": "github",
        "apiBase": "https://api.github.com",
        "owner": "ciferox",
        "repo": "kri",
        "artifacts": {
            "dev": ["src", "info"],
            "rel": ["release", "info"]
        },
        "filter": [
            "!bin/kri.map",
            "!.adone/kri.js",
            "!.adone/dev.json"
        ],
        "nodeModules": {
            "@babel/plugin-proposal-class-properties": "latest"
        }
    },
    "defaultTask": "copy",
    "nonWatchableTasks": [
        "cmake"
    ],
    "units": {
        "app": {
            "description": "Application",
            "task": "transpileExe",
            "src": "src/kri",
            "dst": "bin"
        },
        "common": {
            "description": "Common sources at index location",
            "src": "src/*.js",
            "dst": "lib",
            "task": "transpile"
        },
        "assets": {
            "description": "Assets",
            "task": "copy",
            "src": "src/assets/**/*",
            "dst": "lib/assets",
            "units": {
                "init": {
                    "description": "KRI init subsystem",
                    "src": "src/assets/init.js",
                    "dst": "lib/assets",
                    "task": "buildInit"
                }
            }
        },
        "commands": {
            "description": "Common CLI commands",
            "task": "transpile",
            "src": "src/commands/**/*.js",
            "dst": "lib/commands",
            "units": {
                "dashboard": {
                    "description": "Dashboard",
                    "src": "src/commands/dashboard/**/*.js",
                    "dst": "lib/commands/dashboard",
                    "task": "transpile",
                    "units": {
                        "assets": {
                            "description": "Dashboard assets",
                            "task": "copy",
                            "src": "src/commands/dashboard/assets/**/*",
                            "dst": "lib/commands/dashboard/assets"
                        },
                        "www": {
                            "description": "Dashboard client",
                            "task": "copy",
                            "src": "src/commands/dashboard/www/**/*",
                            "dst": "lib/commands/dashboard/www"
                        }
                    }
                }
            }
        },
        "package_manager": {
            "description": "Package maneger",
            "task": "transpile",
            "src": [
                "src/package_manager/**/*.js",
                "!src/package_manager/assets/**/*"
            ],
            "dst": "lib/package_manager"
        },
        "prebuilt_manager": {
            "description": "Prebuilt manager",
            "task": "transpile",
            "src": [
                "src/prebuilt_manager/**/*.js",
                "!src/prebuilt_manager/assets/**/*"
            ],
            "dst": "lib/prebuilt_manager"
        },
        "tasks": {
            "description": "Realm tasks",
            "src": "src/tasks/**/*.js",
            "dst": "lib/tasks",
            "task": "transpile"
        },
        "weres": {
            "description": "Web rendering surface",
            "src": "src/weres/**/*.js",
            "dst": "lib/weres",
            "task": "transpile"
        }
    }
}